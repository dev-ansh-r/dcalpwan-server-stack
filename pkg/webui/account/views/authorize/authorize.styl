

.container
  width: 100%
  height: 100%
  background-image: url('../../../assets/img/layout/bg/login-visual.jpg')
  background-size: cover
  background-position: left

.left
  flex-basis: 65%
  padding-right: $cs.m
  +media-query($bp.s)
    flex-basis: 100%
    flex-grow: 0
    margin-bottom: $ls.m

  ul
    text-margin-top()
    padding-left: 0

  li
    display: flex
    align-items: flex-start

  li > span:first-child
    color: $c-info
    margin-right: $cs.xs
    nudge('down', 3px)

.right
  +media-query($bp.s)
    flex-grow: 0
    padding-top: 3rem
    background: url('../../../assets/misc/oauth-arrow-hor.svg') no-repeat
  +media-query-min($bp.s)
    flex-basis: 35%
    padding-left: 3rem
    background: url('../../../assets/misc/oauth-arrow.svg') no-repeat

  h3
    one-liner()
    margin-top: 0
    margin-bottom: $cs.s

.login-info
  color: $tc-deep-gray

.note-text
  color: $tc-subtle-gray

.logout-button
  reset-button()
  color: $tc-subtle-gray
  text-decoration: underline
