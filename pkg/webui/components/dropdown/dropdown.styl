

ul.dropdown
  border-normal()
  z-index: $zi.nav
  right: 0
  position: absolute
  background: white
  padding: 0
  min-width: 14rem
  z-index: $zi.dropdown
  margin: 0

  &.larger
    li.dropdown-item
      & > a.button, & > button.button
        padding: $cs.l

  hr
    margin-top: 0
    height: .1rem
    background-color: $c-divider

  li.dropdown-header-item
    display: block
    margin-bottom: 0
    font-weight: $fw.bold

    span
      line-height: 1
      display: block
      padding: $cs.m

  li.dropdown-item
    display: block
    margin-bottom: 0

    button.button
      reset-button()

    & > a.button, & > button.button
      box-sizing: border-box
      line-height: 1
      display: block
      text-decoration: none
      padding: $cs.m
      width: 100%
      &:not(.active)
        color: $tc-deep-gray

      &.active
        border-left: $c-active-blue 5px solid
        color: $c-active-blue

      &:hover
        color: white

        .icon
          color: white

    .icon
      margin-right: $cs.xs

    &:hover
      background-color: $c-active-blue
