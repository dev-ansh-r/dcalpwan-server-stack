

.wrapper
  padding-top: $ls.xxs

.header
  display: flex
  align-items: center
  justify-content: space-between
  margin-bottom: $cs.xs

.title-message
  font-weight: $fw.bold
  margin-right: $cs.xs

.change-location
  text-decoration: none

.map-disabled
  border-normal()
  display: flex
  background-image: url('../../../assets/img/layout/bg/ttn-console-map.png')
