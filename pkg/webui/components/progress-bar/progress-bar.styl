

.container
  width: 100%

.bar
  width: 100%
  height: 1rem
  border: $c-input-border
  border-radius: $br.s

.filler
  background-color: $c-active-blue
  border: 1px solid white
  height: 100%
  box-sizing: border-box
  transition: width $ad.s

  &.warn
    background-color: $tc-warning

  &.limit
    background-color: $c-error

.status
  horizontalize()
  div
    display: flex

.progress-bar-values
  display: flex
  justify-content: space-between
  margin-bottom: $cs.xs
